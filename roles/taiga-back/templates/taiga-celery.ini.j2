

[watcher:taiga-celery]
working_dir = /home/{{ taiga_back_username }}/taiga-back
cmd = celery
args = -A taiga worker -c 4
uid = {{ taiga_back_username }}
numprocesses = 1
autostart = true
send_hup = true
stdout_stream.class = FileStream
stdout_stream.filename = /home/{{ taiga_back_username }}/logs/celery.stdout.log
stdout_stream.max_bytes = 10485760
stdout_stream.backup_count = 4
stderr_stream.class = FileStream
stderr_stream.filename = /home/{{ taiga_back_username }}/logs/celery.stderr.log
stderr_stream.max_bytes = 10485760
stderr_stream.backup_count = 4

[env:taiga-celery]
PATH = /home/{{ taiga_back_username }}/taiga-back-virtualenv/bin:$PATH
TERM=rxvt-256color
SHELL=/bin/bash
USER=taiga
LANG=en_US.UTF-8
HOME=/home/{{ taiga_back_username }}
PYTHONPATH=/home/{{ taiga_back_username }}/taiga-back-virtualenv/lib/python3.5/site-packages
